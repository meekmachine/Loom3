{
  "name": "loom3",
  "version": "0.1.0",
  "description": "Lightweight 3D character animation engine for facial AUs, visemes, and bone-driven motion",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "three": ">=0.150.0"
  },
  "devDependencies": {
    "@types/three": "^0.170.0",
    "@vitest/coverage-v8": "^3.2.4",
    "three": "^0.170.0",
    "tsup": "^8.0.0",
    "typescript": "^5.9.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "3d",
    "animation",
    "facial-animation",
    "FACS",
    "action-units",
    "visemes",
    "lip-sync",
    "character-animation",
    "morph-targets",
    "blendshapes",
    "three.js",
    "babylon.js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/meekmachine/loom3.git"
  },
  "author": "Jonathan",
  "license": "MIT"
}
